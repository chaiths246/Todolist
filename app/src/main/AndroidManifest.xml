<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antra.android.todolist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/todo_image"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.antra.android.todolist.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.antra.android.todolist.ui.NewList"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name="com.antra.android.todolist.ui.MainActivity" />
        <activity android:name="com.antra.android.todolist.ui.ToDoDesc"/>
    </application>

</manifest>